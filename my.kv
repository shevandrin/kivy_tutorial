<ItemLabel@Label>:
    font_size: '25sp'
    halign: 'left'
    valign: 'middle'
    text_size: self.size

<Container>:
    rows: 3
    salt: salt
    nitro: nitro
    sugars: sugars
    starts: starts
    time: time
    text_input: text_input

    AnchorLayout:
        size_hint: 1, 0.15

        TextInput:
            id: text_input
            multiline: False
            font_size: '45sp'
            input_type: 'number'
            input_filter: 'int'

    GridLayout:
        cols: 2

        BoxLayout:
            orientation: 'vertical'
            padding: [30, 0, 0, 0]

            ItemLabel:
                text: 'salt'
            ItemLabel:
                text: 'nitro'
            ItemLabel:
                text: 'sugars'
            ItemLabel:
                text: 'starts'
            ItemLabel:
                text: 'time'


        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.5, 1
            ItemLabel:
                id: salt
                text: '0'
            ItemLabel:
                id: nitro
                text: '0'
            ItemLabel:
                id: sugars
                text: '0'
            ItemLabel:
                id: starts
                text: '0'
            ItemLabel:
                id: time
                text: '0'


    BoxLayout:
        size_hint: 0.9, 0.15
        padding: [30, 0 , 30, 20]
        Button:
            text: 'Go!'
            font_size: 40

            on_release:
                root.calculate()
